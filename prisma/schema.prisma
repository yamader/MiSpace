datasource db {
  url      = env("DB_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int    @id @default(autoincrement())
  fqdn      String
  foreignId Int

  enable    Boolean  @default(true)
  createdAt DateTime @default(now())
  held      Space[]  @relation("host")
  heldIds   Int[]
  joined    Space[]

  nick String
  name String
  // fqdn
  icon String
}

model Space {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  endedAt   DateTime?
  private   Boolean
  title     String
  host      User      @relation("host", fields: [hostId], references: [id])
  hostId    Int
  listener  User[]
}
